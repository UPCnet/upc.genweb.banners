<!-- XXX GW4.2 Revisar HTML -->
<tal:banners define="banners view/getBanners"
             i18n:domain="upc.genweb.banners">
<aside id="banners"
       tal:condition="banners" class="portlet portlet-baners">
        <h2 class="goout" i18n:translate="baners">Banners</h2>
        <ul class="unstyled">
            <li tal:repeat="banner banners">
                <a tal:define="target python:banner.obrirEnFinestraNova and '_blank' or None"
                   tal:attributes="href banner/URLdesti;
                                   target target | nothing;
                                   title python:view.getAltAndTitle(banner.Title)">
                <img tal:attributes="src string:${banner/getURL}/Imatge;
                                    alt python:view.getAltAndTitle(banner.Title);
                                    title python:view.getAltAndTitle(banner.Title) " />
                </a>
            </li>
        </ul>
</aside>
</tal:banners>
